<% if( article.notes.length > 0) { %>
    <% article.notes.map(function(note, i) { %>
        <div class="card mt-3">
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <h5>Comment: <%= note.title %></h5>
                    </div>
                    <form class="col-sm col-sm-auto" action='/articles/<%= article._id %>/notes/<%= note._id %>?method=delete' method="POST">
                        <button class="btn btn-link" type="submit"><i class="far fa-trash-alt ml-3 mr-3"></i></button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">
                    <%= moment(note.date).format("ddd, MMM DD, YYYY, HH:mma") %>
                </h6>
                <p><%= note.body %></p>

            </div>
        </div>
    <% }); %>
<% } %>

<div class="card mt-3">
    <h5 class="card-header">Add New Comment</h5>
    <div class="card-body">
        <form action='/articles/<%= article._id %>/notes' method="POST">
            <div class="form-group">
                <label for="title">Short Title:</label>
                <textarea class="form-control" name="title" id="title" rows="1" placeholder="Best Article Ever"></textarea>
            </div>
            <div class="form-group">   
                <label for="body">Full Comment:</label>
                <textarea class="form-control" name="body" id="body" rows="3" placeholder="Seriously, this one is worth reading"></textarea>
            </div>
            <input type="submit" class="float-right btn btn-primary"></input>
        </form>
    </div>
</div>